{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "bundler",
        "allowJs": true,
        "allowImportingTsExtensions": true,

        "noEmit": true,
        "strict": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "verbatimModuleSyntax": true,
        "typeRoots": ["./node_modules/@types", "src/shared/types"],
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": "./src", // Enables absolute imports from "src"
        "paths": {
            "@/*": ["./*"] // Optional: Map "@/" to "./src/"
        }
    },
    "extends": "astro/tsconfigs/strict",
    "include": [".astro/types.d.ts", "/src/*", "**/*", "jsx.d.ts"],
    "exclude": ["dist", "astro.config.mjs", "eslint.config.js"]
}
